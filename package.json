{
  "author": "Mike Markey",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@3.3.1",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "db": "yarn workspace conbini-this-week-db",
    "scraper": "yarn workspace conbini-this-week-scraper",
    "web": "yarn workspace conbini-this-week-web",
    "---------------": "---------------",
    "deps:check": "npm-check-updates --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates -u --deep --dep prod,dev,optional",
    "fix:prettier": "prettier --write .",
    "fix:staged-files": "yarn workspaces foreach -pv run fix:staged-files",
    "check:eslint": "yarn workspaces foreach -pv run lint",
    "check:prettier": "prettier --check .",
    "check:typescript": "yarn workspaces foreach -pv run type-check",
    "checks": "yarn run-p 'check:*'",
    "postinstall": "yarn db generate",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/eslint": "8.4.5",
    "@types/shell-quote": "1.7.1",
    "eslint": "8.20.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "npm-check-updates": "15.3.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "shell-quote": "1.7.3"
  }
}
