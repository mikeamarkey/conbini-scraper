  "version": "0.0.0",
  "private": true,
  "scripts": {
    "core": "pnpm --filter conbini-this-week-core",
    "db": "pnpm --filter conbini-this-week-db",
    "scraper": "pnpm --filter conbini-this-week-scraper",
    "scraper-api": "pnpm --filter conbini-this-week-scraper-api",
    "web": "pnpm --filter conbini-this-week-web",
    "---------------": "---------------",
    "deps:check": "npm-check-updates --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates -u --deep --dep prod,dev,optional",
    "fix": "pnpm --parallel --aggregate-output -r fix",
    "fix:lint": "pnpm --parallel -r fix:lint",
    "fix:prettier": "prettier --write .",
    "checks": "pnpm --parallel --aggregate-output -r checks",
    "checks:lint": "pnpm --parallel -r checks:lint",
    "checks:prettier": "prettier --check .",
    "checks:tsc": "pnpm --parallel -r checks:tsc",
    "postinstall": "pnpm db generate",
    "prepare": "husky install",
    "staged": "pnpm -r staged"
  },
  "devDependencies": {
    "@types/eslint": "8.4.10",
    "@types/shell-quote": "1.7.1",
    "eslint": "8.31.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "npm-check-updates": "16.6.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.2",
    "shell-quote": "1.7.4"
  }
}
