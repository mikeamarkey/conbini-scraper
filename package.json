{
  "author": "Mike Markey",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "core": "yarn workspace conbini-this-week-core",
    "db": "yarn workspace conbini-this-week-db",
    "scraper": "yarn workspace conbini-this-week-scraper",
    "scraper-api": "yarn workspace conbini-this-week-scraper-api",
    "web": "yarn workspace conbini-this-week-web",
    "---------------": "---------------",
    "deps:check": "npm-check-updates --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates -u --deep --dep prod,dev,optional",
    "fix:prettier": "prettier --write .",
    "fix:staged-files": "yarn workspaces run fix:staged-files",
    "checks:lint": "yarn workspaces run checks:lint",
    "checks:prettier": "prettier --check .",
    "check:typescript": "yarn workspaces run type-check",
    "checks": "yarn run-p check:*",
    "postinstall": "yarn db generate",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/eslint": "8.4.10",
    "@types/shell-quote": "1.7.1",
    "eslint": "8.31.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "npm-check-updates": "16.6.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.2",
    "shell-quote": "1.7.4"
  },
  "resolutions": {
    "**/ts-node": "10.9.1",
    "**/typescript": "4.9.4"
  }
}
