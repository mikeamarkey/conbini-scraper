{
  "author": "Mike Markey",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "web": "yarn workspace conbini-this-week-web",
    "format": "prettier --write .",
    "lint": "yarn workspaces run lint",
    "fix:staged-files": "yarn workspaces run fix:staged-files",
    "deps:check": "npm-check-updates --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates -u --deep --dep prod,dev,optional",
    "prepare": "husky install",
    "scraper": "yarn workspace conbini-this-week-scraper",
    "supabase": "yarn workspace conbini-this-week-supabase",
    "type-check": "yarn workspaces run type-check"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.1",
    "@types/shell-quote": "^1.7.1",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "npm-check-updates": "^12.5.4",
    "prettier": "^2.6.1",
    "shell-quote": "^1.7.3"
  }
}
