{
  "author": "Mike Markey",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "db": "yarn workspace conbini-this-week-db",
    "deps:check": "npm-check-updates --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates -u --deep --dep prod,dev,optional",
    "fix:staged-files": "yarn workspaces run fix:staged-files",
    "format": "prettier --write .",
    "lint": "yarn workspaces run lint",
    "postinstall": "yarn db generate",
    "prepare": "husky install",
    "scraper": "yarn workspace conbini-this-week-scraper",
    "type-check": "yarn workspaces run type-check",
    "web": "yarn workspace conbini-this-week-web"
  },
  "devDependencies": {
    "@types/eslint": "8.4.5",
    "@types/shell-quote": "1.7.1",
    "eslint": "8.20.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "npm-check-updates": "16.6.2",
    "prettier": "2.8.2",
    "shell-quote": "1.7.4"
  }
}
