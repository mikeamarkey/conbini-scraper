  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "client": "yarn workspace client",
    "format": "prettier --write .",
    "lint": "yarn workspaces run lint",
    "prepare": "husky install",
    "scraper": "yarn workspace scraper",
    "type-check": "yarn workspaces run type-check"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "lint-staged": "^11.2.3",
    "prettier": "^2.0.2"
  }
}
