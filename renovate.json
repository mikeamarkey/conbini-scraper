{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "rangeStrategy": "pin",
  "separateMajorMinor": false,
  "packageRules": [
    {
      "groupName": "Top Level Dependencies",
      "matchPaths": ["package.json"]
    },
    {
      "groupName": "Web App Dependencies",
      "matchPaths": ["apps/web/package.json"]
    },
    {
      "groupName": "Scraper Package Dependencies",
      "matchPaths": ["packages/scraper/package.json"]
    },
    {
      "groupName": "DB Package Dependencies",
      "matchPaths": ["packages/db/package.json"]
    }
  ]
}
