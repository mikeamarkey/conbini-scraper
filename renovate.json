{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "rangeStrategy": "pin",
  "separateMajorMinor": false,
  "packageRules": [
    {
      "groupName": "Top Level Dependencies",
      "matchFiles": ["package.json"],
      "excludePackagePatterns": ["eslint", "typescript"]
    },
    {
      "groupName": "Web App Dependencies",
      "matchFiles": ["apps/web/package.json"],
      "excludePackagePatterns": ["eslint", "typescript"]
    },
    {
      "groupName": "Scraper Package Dependencies",
      "matchFiles": ["packages/scraper/package.json"],
      "excludePackagePatterns": ["eslint", "typescript"]
    },
    {
      "groupName": "DB Package Dependencies",
      "matchFiles": ["packages/db/package.json"],
      "excludePackagePatterns": ["eslint", "typescript"]
    },
    {
      "groupName": "Shared",
      "matchPackagePatterns": ["eslint", "typescript"]
    }
  ]
}
