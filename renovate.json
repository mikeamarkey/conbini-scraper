{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "rangeStrategy": "pin",
  "separateMajorMinor": false,
  "packageRules": [
    {
      "groupName": "Shared",
      "matchPackagePatterns": ["@types/node", "eslint", "typescript"]
    },
    {
      "groupName": "Top Level",
      "matchFiles": ["package.json"],
      "excludePackagePatterns": ["@types/node", "eslint", "typescript"]
    },
    {
      "groupName": "Apps: Web",
      "matchFiles": ["apps/web/package.json"],
      "excludePackagePatterns": ["@types/node", "eslint", "typescript"]
    },
    {
      "groupName": "Packages: Scraper",
      "matchFiles": ["packages/scraper/package.json"],
      "excludePackagePatterns": ["@types/node", "eslint", "typescript"]
    },
    {
      "groupName": "Packages: DB",
      "matchFiles": ["packages/db/package.json"],
      "excludePackagePatterns": ["@types/node", "eslint", "typescript"]
    }
  ]
}
